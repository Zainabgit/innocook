<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the shape as a rectangle -->
    <solid android:color="#FFFFFF"/> <!-- Background color of the rectangle -->

    <!-- Set corner radius for rounded corners (optional) -->
    <corners android:radius="2dp"/> <!-- Adjust the radius as needed -->

    <!-- Add padding (optional) -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp"/>

</shape>